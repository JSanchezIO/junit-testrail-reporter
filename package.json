{
  "name": "junit-testrail-reporter",
  "version": "1.0.0",
  "description": "Report junit test results to TestRail",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/JSanchezIO/junit-testrail-reporter.git"
  },
  "author": "Juan Sanchez <11725911+JSanchezIO@users.noreply.github.com>",
  "homepage": "https://github.com/JSanchezIO/junit-testrail-reporter",
  "bin": {
    "junit-testrail-reporter": "./dist/cli.js"
  },
  "scripts": {
    "ci:build": "tsc",
    "ci:lint": "eslint './**/*.@(js|js|ts|ts)'",
    "ci:release": "semantic-release",
    "ci:types": "tsc --noEmit",
    "ci:validate": "npm-run-all ci:lint ci:types",
    "prepare": "is-ci || husky install"
  },
  "files": [
    "dist",
    "package.json"
  ],
  "keywords": [
    "automation",
    "junit",
    "report",
    "reporter",
    "results",
    "test",
    "testrail"
  ],
  "dependencies": {
    "@dlenroc/testrail": "^1.3.0",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.2.1",
    "chalk": "^4.1.1",
    "glob": "^7.1.6",
    "xml2js": "^0.4.23",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@semantic-release/changelog": "^5.0.1",
    "@types/glob": "^7.1.3",
    "@types/node": "^15.0.1",
    "@types/xml2js": "^0.4.8",
    "@types/yargs": "^16.0.1",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.24.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^6.0.0",
    "is-ci": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "prettier-plugin-organize-imports": "^1.1.1",
    "prettier-plugin-package": "^1.3.0",
    "pretty-quick": "^3.1.0",
    "semantic-release": "^17.4.2",
    "typescript": "^4.2.4"
  }
}
